{{!< layout}}

<div class="pb-2 mt-2 mb-4 border-bottom">
  <h3>New travel</h3>
</div>

<!-- <form class="form-login" method="POST"> -->
<form class="" method="POST">
  <input type="hidden" name="_csrf" value={{_csrf}} />
  <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-right" for="description">Description</label>
    <div class="col-md-7"><input class="form-control" id="description" type="description" name="description" placeholder="Description" autofocus="autofocus" autocomplete="description" required="required" /></div>
  </div>
  <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-right" for="dateFrom">Date from</label>
    <div class="col-md-4"><input class="form-control" id="dateFrom" type="date" min="2015-01-01" max={{formatDate}} value={{formatDate}} name="dateFrom" placeholder="" autocomplete="dateFrom" required="required" /></div>
  </div>
  <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-right" for="dateTo">Date to</label>
    <div class="col-md-4"><input class="form-control" id="dateTo" type="date" min={{formatDate}} max={{formatDate}} value={{formatDate}} name="dateTo" placeholder="" autocomplete="dateTo" required="required" /></div>
  </div>
  <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-right" for="homeCurrency">Home currency</label>
    <div class="col-md-2"><input class="form-control" id="homeCurrency" type="homeCurrency" value="{{user.homeCurrency}}" name="homeCurrency" placeholder="USD" autocomplete="homeCurrency" required="required" /></div>
  </div>
  <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-right" for="perMileAmount">Per mile amount</label>
    <div class="col-md-2"><input class="form-control" id="perMileAmount" type="perMileAmount" {{{setValue user.perMileAmount}}} name="perMileAmount" placeholder="0.54" autocomplete="perMileAmount" required="required" /></div>
  </div>
  <div class="form-group ">
    <div class="offset-md-3 col-md-7 pl-2 ">
      <button class="col-md-4 btn btn-success mb-1" type="submit"><i class="fas fa-plus"></i>Add</button>
      <a class="col-md-4 btn btn-outline-primary mb-1" href="/travels" type="button"><i class="fas fa-ban"></i>Cancel</a></div>
  </div>
  <div class="form-group ">
    <div class="offset-md-3 col-md-7 pl-2">
      <hr />
    </div>
  </div>
</form>
